<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:VDCA.Views"
             x:Class="VDCA.Views.About"
             x:DataType="views:About"
             Title="About">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Image Source="vdca_solid_color.png"
               Margin="0,0,0,80"
               WidthRequest="{DynamicResource LogoWidthRequest}"
               HeightRequest="{DynamicResource LogoHeightRequest}"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Label Text="{Binding NameVdca}"
               x:Name="VdcaText"
               FontSize="24"
               TextColor="{StaticResource PrimaryText}"
               BackgroundColor="{StaticResource PrimaryBackground}"
               FontAttributes="Bold"
               Margin="10,0,10,20"
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Label Text="{Binding TitleString}"
               x:Name="TitleText"
               FontSize="24"
               TextColor="{StaticResource PrimaryText}"
               BackgroundColor="{StaticResource PrimaryBackground}"
               FontAttributes="Bold"
               Margin="10,0,10,20"
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <Label Text="{Binding VersionInfo.VersionString}"
               FontSize="24"
               TextColor="{StaticResource PrimaryText}"
               BackgroundColor="{StaticResource PrimaryBackground}"
               FontAttributes="Bold"
               Margin="10,0,10,20"
               HorizontalTextAlignment="Center"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        <Label Text="{Binding StatementString}"
               HorizontalTextAlignment="Center"
               FontSize="24"
               TextColor="{StaticResource PrimaryText}"
               BackgroundColor="{StaticResource PrimaryBackground}"
               FontAttributes="Bold"
               Margin="10,0,10,0"
               x:Name="StatementText"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>